    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/smartlogin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/smartlogin/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/smartlogin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/smartlogin/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/smartlogin/css/util.css">
    <link rel="stylesheet" type="text/css" href="/smartlogin/css/main.css">
    <!--===============================================================================================-->
</head>
<body>



    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @*<form class="login100-form validate-form p-l-55 p-r-55 p-t-178">*@
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form p-l-55 p-r-55 p-t-178", role = "form" }))
                {
                    <span class="login100-form-title">
                        LOG IN
                    </span>

                    <div class="wrap-input100">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", PlaceHolder = "E-MAIL", Type = "email" })

                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>


                    <div class="wrap-input100">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", PlaceHolder = "PASSWORD" })

                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>


                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            LOG IN
                        </button>
                    </div>

                    <div class="flex-col-c p-t-170 p-b-40">
                        <span class="txt1 p-b-9">
                            DON'T HAVE AN ACCOUNT?
                        </span>

 
                        @Html.ActionLink("REGISTER NOW", "Register", "Account", null, new { @class = "txt3" })
                    </div>
                }
                @*</form>*@

            </div>
        </div>
    </div>



    @*<div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
            <input class="input100" type="text" name="username" placeholder="Username">
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Please enter password">
            <input class="input100" type="password" name="pass" placeholder="Password">
            <span class="focus-input100"></span>
        </div>*@








